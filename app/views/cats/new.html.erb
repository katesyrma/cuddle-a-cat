<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Add a Cat</h3>
        <%= simple_form_for @cat do |f| %>
          <%= f.input :name, placeholder: 'Charlie' %>
          <%= f.input :gender, placeholder: 'Male/Female/Other' %>
          <%= f.input :breed, placeholder: 'Persian' %>
          <%= f.input :color, placeholder: 'Orange' %>
          <%= f.input :age %>
          <%= f.input :hair_type, placeholder: 'Long-haired' %>
          <%= f.input :address, placeholder: '10 Rose Lane' %>
          <%= f.input :availability, placeholder: 'Availabile' %>
          <%= f.input :photo, as: :file %>
          <%= f.submit class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
