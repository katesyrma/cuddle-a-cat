
<div class="cats-container">
  <div class="cats-row">
    <% @cats.each do |cat| %>
    <%= link_to cat_path(cat) do %>
    <div class="card-trip text-decoration-none">
      <%= cl_image_tag cat.photo.key, height: 300, width: 400, crop: :thumb, class: "card-img-top" %>
      <div class="card-trip-infos">
        <div>
          <h2 class="text-decoration-none"><%= cat.name %></h2>
          <p class="text-decoration-none"><%= cat.address %></p>
        </div>
        <!-- <p class="card-trip-pricing"><%= cat.gender %></p> -->
        <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
      </div>
    </div>
    <% end %>
    <% end %>
  </div>
  <div id="map"
    style="width: 100%; height: 100vh;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>




