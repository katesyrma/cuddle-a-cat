<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center text-black">
    <h1>PICK A CAT</h1>
    <h3 class="typed-js"></h3>
  </div>
</div>
<div class="container py-5">
  <div class="card" style="width: 18rem;">
  <% @cats.each do |cat| %>
  <%= cl_image_tag cat.photo.key, height: 300, width: 400, crop: :fill, class: "card-img-top" %>
    <div class="card-body">

      <h5 class="card-title"><%= cat.name %></h5>
      <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
      </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><%= cat.color %></li>
          <li class="list-group-item"><%= cat.address %></li>
          <li class="list-group-item"><%= cat.breed %></li>
          <li class="list-group-item"><%= cat.hair_type %></li>
          <li class="list-group-item"><%= cat.gender %></li>
  <% end %>
        </ul>

    <div class="card-body">
      <a  class="btn btn-primary" href="#" class="card-link">Book</a>
      <a  class="btn btn-warning" href="#" class="card-link">Edit</a>
      <a  class="btn btn-danger" href="#" class="card-link">Delete</a>
    </div>
</div>
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">The Cats</h3>
    <%= link_to 'Upload a cat', new_cat_path, class: 'btn btn-flat' %>
  </div>
  <div class="row">
    <% @cats.each do |cat| %>
      <div class="co-12 colsm-6 col-md-4">
        <%= link_to cat_path(cat), class:'text-decoration-none' do %>
            <%= cat.name %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>



