<div class="d-flex">
  <div class="container" id="booking-index">
    <h3 style="text-align: center;">Upcoming bookings</h3>
    <% @bookings.each do |booking| %>
    <div class="card-booking m-5">
      <%= cl_image_tag booking.cat.photo.key, height: 300, width: 400, crop: :fill %>

      <div class="card-booking-infos">
        <div>
          <h2><%= booking.cat.name %></h2>

          <p>from <%= booking.check_in %></p>
          <p>till <%= booking.check_out %></p>

        </div>

        <h2 class="card-booking-infos-address"><i class="fas fa-location-arrow"></i> <%= booking.cat.address %></h2>

        <%= link_to "Remove",booking_path(booking), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-warning" %>
        <%= cl_image_tag booking.cat.user.photo.key, class: "card-trip-user avatar-bordered" %>
      </div>
    </div>

    <% end %>
  </div>

  <div class="container">
    <h3 style="text-align: center;">Your cats' bookings</h3>
    <% @my_cats.each do |cat| %>
      <% cat.bookings.each do |booking| %>

        <div class="card-booking m-5">

          <%= cl_image_tag booking.cat.photo.key, height: 300, width: 400, crop: :fill %>

          <div class="card-booking-infos">

            <div>
              <h2><%= booking.cat.name %></h2>
              <p>from <%= booking.check_in %></p>
              <p>till <%= booking.check_out %></p>
            </div>

            <%= cl_image_tag booking.user.photo.key, class: "card-trip-user avatar-bordered" %>
          </div>
       </div>

      <% end %>
    <% end %>
  </div>
</div>
